@model Clientes.Models.Cliente



@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Lista CLientes</h2>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#mimodal">
  Crear
</button>

<!-- Para identificar el modal ingresar sin el signo de numero en el id="" -->

<!-- Tabla -->

<div class="p-4 border rounded bg-light" >
        <table id="tblData" class="table table-bordered table-responsive-xl">
        <thead class="thead-dark">
            <tr class=table-info>
                <th>Nombre</th>
                <th>Cedula</th>
                <th>Telefono</th>
                <th>Direccion</th>
                <th>Estado</th>
                <th></th>



            </tr>


        </thead>


        </table>

</div>




<!-- Modal -->
<div class="modal fade" id="mimodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <form method="post" enctype="multipart/form-data">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div style="padding-left:15%; padding-right:15%;padding-bottom:30px">
            <div class="row p-3 border-0">
                <div asp-validation-summary="ModelOnly" class="text-danger" ></div>

            </div>
            <div class="form-row" style="padding-top:14px;"    >
        <div class="form-group col-md-6">
            <label>Nombres</label>
            <input asp-for="Nombre" class="form-control" placeholder="Nombre Clliente" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
         <div class="form-group col-md-6">
            <label>Cedula</label>
            <input asp-for="Cedula" class="form-control" placeholder="Cedula" />
            <span asp-validation-for="Cedula" class="text-danger"></span>
        </div>
        
        <div class="form-group col-md-6">
            <label>Telefono</label>
            <input asp-for="Telefono" class="form-control" placeholder="Telefono" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Direccion</label>
            <input asp-for="Direccion" class="form-control" placeholder="Direcion" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label>Estado</label>
            <select asp-for="Estado" class="form-control">
             <option value="true" >Activo</option>
              <option value="false" >Inactivo</option>
            
           </select> 
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>
    </div>
    </div>
        </div>
     

     
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
        
         </div>
         </form>
      </div>
    </div>
</div>






@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Cliente.js"></script>
}